# ===========================================
# CONFIGURACIÓN GENERAL
# ===========================================
server.port=${PORT:8081}
spring.application.name=PixelXTY

# ===========================================
# BASE DE DATOS - MYSQL
# ===========================================
# Configuración para producción (usando variables de entorno)
spring.datasource.url=${DATABASE_URL:jdbc:mysql://127.0.0.1:3306/gestor_tareas}
spring.datasource.username=${DATABASE_USERNAME:root}
spring.datasource.password=${DATABASE_PASSWORD:123}

# Configuración de conexión segura
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.hikari.connection-timeout=20000
spring.datasource.hikari.maximum-pool-size=5

# ===========================================
# JPA / HIBERNATE
# ===========================================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.jdbc.time_zone=UTC

# Evitar advertencias de JPA
spring.jpa.open-in-view=false
spring.jpa.properties.hibernate.enable_lazy_load_no_trans=true

# ===========================================
# LOGGING
# ===========================================
logging.level.com.PixelXTY=INFO
logging.level.org.springframework.web=ERROR
logging.level.org.hibernate=ERROR
logging.file.name=app.log

# ===========================================
# SPRING SECURITY / JWT
# ===========================================
# JWT Secret Key (usar variable de entorno en producción)
jwt.secret=${JWT_SECRET:pixelxty_secret_key_pixelxty_secret_key_2025_pixelxty_secret_key_2025}
jwt.expiration=86400000  # 24 horas

# ===========================================
# CORS (ya configurado en SecurityConfig)
# ===========================================
# spring.mvc.cors.allowed-origins=${ALLOWED_ORIGINS:http://localhost:4200}
# spring.mvc.cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
# spring.mvc.cors.allowed-headers=*
# spring.mvc.cors.allow-credentials=true

# ===========================================
# PROPIEDADES ADICIONALES
# ===========================================
# Manejo de archivos
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Actuator para monitoreo (opcional)
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always

# Server timeout
server.connection-timeout=30000